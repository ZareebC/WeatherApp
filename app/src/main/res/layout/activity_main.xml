<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1f20"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bigImage"
        android:layout_width="109dp"
        android:layout_height="104dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309"
        app:srcCompat="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/bigTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bigImage"
        app:layout_constraintStart_toStartOf="@+id/bigImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.249" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="139dp"
        android:layout_height="28dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:translationZ="109dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bigImage"
        app:layout_constraintEnd_toEndOf="@+id/bigImage"
        app:layout_constraintStart_toStartOf="@+id/bigImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <ImageView
        android:id="@+id/backGround"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:translationZ="-109dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/quoteTheme"
        android:layout_width="255dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="ssdsdsd"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:fontFamily="@font/roboto_slab"
        app:layout_constraintBottom_toTopOf="@+id/bigImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605" />

    <TextView
        android:id="@+id/weatherDesc"
        android:layout_width="134dp"
        android:layout_height="15dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bigImage"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/bigImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491" />

    <TextView
        android:id="@+id/bigDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bigImage"
        app:layout_constraintStart_toStartOf="@+id/bigImage"
        app:layout_constraintTop_toBottomOf="@+id/weatherDesc"
        app:layout_constraintVertical_bias="0.039" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="276dp"
        android:layout_height="163dp"
        android:background="#00505050"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bigImage"
        app:layout_constraintVertical_bias="0.889" />

    <Button
        android:id="@+id/submit"
        android:layout_width="66dp"
        android:layout_height="16dp"
        android:background="#FFEB3B"
        android:text="Submit"
        android:translationZ="109dp"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/editText" />

    <ListView
        android:id="@+id/fillerList"
        android:layout_width="427dp"
        android:layout_height="43dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bigImage"
        app:layout_constraintStart_toStartOf="@+id/bigImage"
        app:layout_constraintTop_toBottomOf="@+id/bigImage"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>